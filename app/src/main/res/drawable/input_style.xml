<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo del campo -->
    <solid android:color="#FFFFFF" />

    <!-- Borde del campo -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Bordes redondeados -->
    <corners android:radius="5dp" />

    <!-- Espaciado interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
