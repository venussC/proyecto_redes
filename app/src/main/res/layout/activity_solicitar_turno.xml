<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Encabezado superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#005b5c"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/atras"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Solicitar turno"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sección: Datos del paciente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <!-- Título con ícono -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/paciente"
                    android:tint="#000000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos del paciente"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Línea divisora -->
            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#A5D6A7"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Caja de formulario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/form_box"
                android:padding="16dp">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tu nombre"
                    android:inputType="textPersonName"
                    android:background="@drawable/input_style" />

                <!-- Cédula -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cédula"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="8-000-000"
                    android:inputType="number"
                    android:background="@drawable/input_style" />

                <!-- Teléfono -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+507 6789-0000"
                    android:inputType="phone"
                    android:background="@drawable/input_style" />

                <!-- Especialidad -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialidad"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_style"
                    android:entries="@array/especialidades" />

                <!-- Motivo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motivo de la consulta"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe brevemente tu malestar..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:background="@drawable/input_style" />
            </LinearLayout>

            <!-- Botón confirmar -->
            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Confirmar turno"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawableStart="@drawable/confirmar"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/bg_boton_confirmar"
                android:padding="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:theme="@style/ThemeOverlay.AppCompat" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
